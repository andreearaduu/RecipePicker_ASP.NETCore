@model recipePickerApp.Models.PhotoModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/css/popular_recipes_style.css">
</head>
<body>
    <h3>Adauga fotografie</h3>
    <form enctype="multipart/form-data" asp-action="AddPhoto">


        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
        </div>
        @*<p><a class="button" asp-action="AddPhoto">Adauga o poza la profil</a></p>*@
        <input type="submit" value="submit" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
    </form>
</body>
</html>